<launch>
  <!--Lifting tray controller-->
  <!-- <rosparam file="$(find robot_control2)/config/config.yaml" command="load"/> -->

  <!-- load the controllers -->
  <node pkg="controller_manager" exec="spawner.py" name="controller_spawner" respawn="false"
    output="screen" namespace="/my_robot" args="joint_state_controller joint1_position_controller">
    <param from="$(find-pkg-share robot_control2)/config/config.yaml"/>
  </node>

  <!-- convert joint states to TF transforms for rviz, etc -->
  <node pkg="robot_state_publisher" name="robot_state_publisher" exec="robot_state_publisher"
    respawn="false" output="screen">
    <remap from="/joint_states" to="/my_robot/joint_states" />
  </node>
  <!--End lifting tray controller-->


  <!--Teleop control-->
  <!-- <rosparam command="load" file="$(find robot_control2)/config/diff_drive.yaml"/> -->

  <node pkg="robot_control2" exec="scripts/laser_teleop_keyboard" name="teleop_keyboard" output="screen">
    <param from="$(find-pkg-share robot_control2)/config/diff_drive.yaml"/>
    <param name="scale_linear" value="0.5" />
    <param name="scale_angular" value="1.5" />
    <remap from="teleop_keyboard/cmd_vel" to="/cmd_vel"/>
  </node>


  <!-- Load joint controller configurations from YAML file to parameter server -->


</launch>