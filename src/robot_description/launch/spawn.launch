<?xml version="1.0" encoding="UTF-8"?>
<launch>
    <arg name="model" default="burger" doc="model type [burger, waffle, waffle_pi]"/>
    <arg name="x" default="5.00 " /> 
    <arg name="y" default="-4.00" /> 
    <arg name="z" default="0.011" />
    <arg name="yaw" default="0.0"/>
    <arg name="debug" default="false" />
    <arg name="gui" default="true" />
    <arg name="pause" default="false" />
    <arg name="world" default="laser" />
    <arg name="x2" default="4.00 " /> 
    <arg name="y2" default="-4.00" /> 
    <arg name="z2" default="0.011" />
    <arg name="x3" default="3.00 " /> 
    <arg name="y3" default="-4.00" /> 
    <arg name="z3" default="0.011" />
    <arg name="x4" default="2.00 " />
    <arg name="y4" default="-4.00" />
    <arg name="z4" default="0.011" />
    <arg name="x5" default="1.00" /> 
    <arg name="y5" default="-4.00" />
    <arg name="z5" default="0.011" />

    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="use_sim_time" value="true" />
        <arg name="debug" value="false" />
        <arg name="gui" value="$(arg gui)" />
        <arg name="world_name" value="$(find robot_description)/world/$(arg world).world" />
    </include>

    <!--=========================== SENSORS ===========================-->
    <!-- Set true to sensor spawn in gazebo-->
    <arg name="set_sensor_rplidar" default="false" />
    <arg name="set_sensor_lidar" default="true" />
    <arg name="set_sensor_imu" default="true" />
    <arg name="set_sensor_camera" default="true" />
    <!-- <arg name="set_sensor_realsense" default="true"/> -->

    <param name="robot_description" command="$(find xacro)/xacro 
    '$(find robot_description)/urdf/robot.urdf.xacro'
    sensor_rplidar:=$(arg set_sensor_rplidar)
    sensor_lidar:=$(arg set_sensor_lidar)
    sensor_imu:=$(arg set_sensor_imu)
    sensor_camera:=$(arg set_sensor_camera)" />
    
    
    
    <node name="my_robot_spawn" pkg="gazebo_ros" type="spawn_model" output="screen" args="-urdf 
    -param robot_description -model my_robot -x $(arg x) -y $(arg y) -z $(arg z) -Y $(arg yaw)"></node>

    <node name="my_robot_2_spawn" pkg="gazebo_ros" type="spawn_model" output="screen" args="-urdf 
    -param robot_description -model my_robot_2 -x $(arg x2) -y $(arg y2) -z $(arg z2) -Y $(arg yaw)"></node>

    <node name="my_robot_3_spawn" pkg="gazebo_ros" type="spawn_model" output="screen" args="-urdf 
    -param robot_description -model my_robot_3 -x $(arg x3) -y $(arg y3) -z $(arg z3) -Y $(arg yaw)"></node>

    <node name="my_robot_4_spawn" pkg="gazebo_ros" type="spawn_model" output="screen" args="-urdf 
    -param robot_description -model my_robot_4 -x $(arg x4) -y $(arg y4) -z $(arg z4) -Y $(arg yaw)"></node>

    <node name="my_robot_5_spawn" pkg="gazebo_ros" type="spawn_model" output="screen" args="-urdf 
    -param robot_description -model my_robot_5 -x $(arg x5) -y $(arg y5) -z $(arg z5) -Y $(arg yaw)"></node>
    
</launch>